# ── Server ──────────────────────────────────────────────────
NODE_ENV=development
PORT=3000

# ── MongoDB ─────────────────────────────────────────────────
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-host>/<database>

# ── JWT ─────────────────────────────────────────────────────
JWT_SECRET=change-me-to-a-secure-random-string
JWT_EXPIRES_IN=7d

# ── CORS ────────────────────────────────────────────────────
CLIENT_URL=http://localhost:4200
